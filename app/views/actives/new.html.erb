<h1>New Prescription Form</h1>

<%= form_with scope: :active, url: actives_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :dosage %><br>
    <%= form.text_field :dosage %>
  </p>
  <p>
    <%= form.label :purpose %><br>
    <%= form.text_area :purpose %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
